<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"          
             x:Class="Ideas.Views.IdeasPage"
             xmlns:viewModels="clr-namespace:Ideas.ViewModels;assembly=Ideas">
  <ContentPage.BindingContext>
    <viewModels:IdeasViewModel />
  </ContentPage.BindingContext>
  <StackLayout Orientation="Vertical"
                  Spacing="30"
                  Padding="30">
    <Entry Text="{Binding AccessToken}" />

    <Button Command="{Binding GetIdeasComma}" Text="Get All Ideas"/>
    <ListView ItemSource="{Binding Ideas}" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout>
              <Label Text="{Binding Title}" />
              <Label Text="{Binding Category}" />
              <Label Text="{Binding Description}" />
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </StackLayout>

</ContentPage>