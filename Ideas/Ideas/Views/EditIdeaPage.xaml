<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ideas.Views.EditIdeaPage"
             xmlns:viewModels="clr-namespace:Ideas.ViewModels;assembly=Ideas">
  <!--<ContentPage.BindingContext>
    <viewModels:EditIdeaViewModel />
  </ContentPage.BindingContext>-->
  <StackLayout Orientation="Vertical">
    <Entry Text="{Binding idea.Title}" Placeholder="Title" />

    <Entry Text="{Binding idea.Description}" Placeholder="Description" />

    <Entry Text="{Binding idea.Category}" Placeholder="Category" />

    <Button Command="{Binding EditCommand}" Text="Edit Idea" />

    <Button Command="{Binding DeleteCommand}" Text="Delete Idea" />

    <Button Clicked="GoToIdeaPage_Clicked" Text="Go To Ideas Page" />

  </StackLayout>
</ContentPage>